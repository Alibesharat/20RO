@model DAL.ViewModels.RegisterStudentParrentViewModel
@{
    ViewData["Title"] = "ثبت نام";
}


<div class="fix-navbar-header">
    <br />





</div>
<div class="row">
    <div class="col s12 m4 offset-m4">
        <div class="card white lighten-1">
            <p class="center">
                <p class="red-text">@ViewBag.msg</p>
            </p>

            <div class="card-content white-text">
                <div asp-validation-summary="ModelOnly" class="red-text"></div>

                <form asp-action="Register" asp-controller="Account" method="post">
                 
                    <p class=" center">
                        
                        <p class="black-text">شماره تلفن همراه خود را وارد کنید</p>
                        <br/>

                        <input class="entry" name="phoneNumber" placeholder="تلفن همراه">


                    </p>
                  



                    <p class="center">
                        <button class="waves-effect btn corner btn-block" type="submit">
                            دریافت کد

                        </button>
                    </p>
                    
                    
                </form>

            </div>
          



        </div>
    </div>
</div>

