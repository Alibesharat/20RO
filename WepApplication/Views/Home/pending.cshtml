@model IEnumerable<DAL.ServiceRequset>

@{
    ViewData["Title"] = "سرویس های در دست بررسی";
}

<div class="fix-navbar-header">
    <br />
    <p class="center">
        <a class="waves-effect  btn corner  no-action">  سوابق سرویس های در دست بررسی  </a>

    </p>
</div>

<div class="row ">
    @if (Model != null && Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <div class="col s12 m6 offset-5 ">
                <div class="card red lighten-5 card-padding  card-click " onclick="getDetail('@item.Id')">
                    <div class="card-content  white-text ">
                        <button class="btn card-header">
                            مدرسه  @item?.Academy?.Name
                            <i class="fa fa-empire"></i>
                        </button>
                        <br />
                        



                    </div>

                </div>
            </div>
        }
    }
    else
    {
            <div class="col s12">
                <div class="card  lighten-5 card-padding ">
                    <div class="card-content white-text">
                        <div class="card-action">
                            <p class="center black-text">شما هیچ سرویس در دست بررسی ندارید</p>
                        </div>
                    </div>
                </div>
            </div>
    }


</div>
@section Scripts {
    <script>
        function getDetail(id) {
            location.href = '/ServiceDetail/' + id;
        }
    </script>
}