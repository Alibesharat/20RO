@model DAL.ServiceRequset
@using DAL;

@{

    ViewData["Title"] = $"تغییر وضعیت سرویس";
}


<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-header text-center">
            <span class="btn btn-warning">
                @ViewData["Title"]
            </span>
        </h3>
        <p class="text-center">
            @ViewBag.msg
        </p>
        <hr />
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="ChangeState">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <label asp-for="RequsetState" class="control-label"></label>
                        <select asp-for="RequsetState" class="form-control Select2" name="RequsetSate" asp-items="Html.GetEnumSelectList<RequsetSate>()"></select>

                        <span asp-validation-for="RequsetState" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <input type="submit" value="ذخیره" class="btn btn-warning btn-block" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div>
    <a class="btn btn-danger" asp-action="Index"> بازگشت به لیست </a>
</div>

