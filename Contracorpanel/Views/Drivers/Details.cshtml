                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.CarColor)

                        </td>
                        <td>
                            @Html.DisplayFor(model => model.CarColor)

                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.IranianIdCode)

                        </td>
                        <td>
                            @Html.DisplayFor(model => model.IranianIdCode)

                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.DrivingLicense)

                        </td>
                        <td>
                            @Html.DisplayFor(model => model.DrivingLicense)

                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.DriverCode)

