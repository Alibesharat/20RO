                        <td>
                            @Html.DisplayFor(model => model.Password)

                        </td>
                    </tr>


                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.AllowActivity)

                        </td>
                        <td>
                            @Html.DisplayFor(model => model.AllowActivity)

                        </td>
                    </tr>


                </tbody>
            </table>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default">لیست راننده ها</a>
