@model DAL.TaxiService
@using DAL

@{
ViewData["ClassName"]=@Html.DisplayNameFor(c=>c.ClassName);
    ViewData["Title"] = $"افزودن {ViewData["ClassName"]} جدید";
}


 <div class="box box-primary">
    <div class="box-header">
<h3 class="box-header text-center">
    <span class="btn btn-warning"> @ViewData["Title"]
    </span>
    </h3>
    <hr />
   </div>
    <div class="box-body">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DriverId" class="control-label"></label>
                <select asp-for="DriverId" class ="form-control" asp-items="ViewBag.DriverId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TaxiCabState" class="control-label"></label>
                <select asp-for="TaxiCabState" class="form-control Select2"></select>
                <span asp-validation-for="TaxiCabState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceType" class="control-label"></label>
                <select class="form-control" asp-for="ServiceType" asp-items="@Html.GetEnumSelectList<ServiceType>()"></select>
                <span asp-validation-for="ServiceType" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="ثبت" class="btn btn-success  btn-block" />
            </div>
        </form>
    </div>
</div>
</div>
    </div>
<div>
    <a class="btn btn-danger" asp-action="Index"> بازگشت به لیست </a>
</div>

