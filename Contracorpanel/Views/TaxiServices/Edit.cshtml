@model DAL.TaxiService

@{
    ViewData["ClassName"]=@Html.DisplayNameFor(c=>c.ClassName);
    ViewData["Title"] = $"ویرایش {ViewData["ClassName"]} ";
}


<div class="box box-primary">
    <div class="box-header">
<h3 class="box-header text-center">
    <span class="btn btn-warning"> @ViewData["Title"]
    </span>
    </h3>
    <hr />
   </div>
    <div class="box-body">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DriverId" class="control-label"></label>
                <select asp-for="DriverId" class="form-control" asp-items="ViewBag.DriverId"></select>
                <span asp-validation-for="DriverId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaxiCabState" class="control-label"></label>
                <select asp-for="TaxiCabState" class="form-control Select2"></select>
                <span asp-validation-for="TaxiCabState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DriverPercent" class="control-label"></label>
                <input asp-for="DriverPercent" class="form-control" />
                <span asp-validation-for="DriverPercent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hs_Change" class="control-label"></label>
                <input asp-for="Hs_Change" class="form-control" />
                <span asp-validation-for="Hs_Change" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-warning btn-block" />
            </div>
        </form>
    </div>
</div>
    </div>
    </div>
<div>
    <a class="btn btn-danger" asp-action="Index">بازگشت به لیست</a>
</div>

