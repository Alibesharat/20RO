
@{
  
    ViewData["Title"] = $" ورود";
}


<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-header text-center">
            <span class="btn btn-warning">
                @ViewData["Title"]
            </span>
        </h3>
        <hr />
    </div>
    <div class="box-body">

        <div class="row">
            <div class="col-md-4">
                <form method="post">

                    <div class="form-group">
                        <label for="PhoneNumber" class="control-label">نام کاربری</label>
                        <input name="PhoneNumber" id="PhoneNumber" class="form-control" placeholder="نام کاربری"/>

                    </div>
                    <div class="form-group">
                        <label for="Password" class="control-label">رمز عبور</label>
                        <input name="Password" id="Password" class="form-control" placeholder="رمز عبور"/>

                    </div>


                    <div class="form-group">
                        <input type="submit" value="ورود" class="btn btn-success  btn-block" />
                    </div>
                </form>
                <p class="text-warning">@ViewBag.msg</p>
            </div>
        </div>
    </div>
</div>


