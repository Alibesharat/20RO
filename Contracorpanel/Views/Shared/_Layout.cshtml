<html>
<head>


    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title> پنل مدیریت | @Const.WebSiteName </title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <!-- Bootstrap 3.3.6 -->
    <link rel="stylesheet" href="~/plugins/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/skins/_all-skins.min.css">
    <link rel="stylesheet" href="~/dist/css/AlphaCoreStyle.css?v2">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />

    @*izimodal -- Alert*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/izimodal/1.5.1/css/iziModal.min.css" />
    <style>
        * {
            direction: rtl;
        }

        .table-responsive .table {
            max-width: none;
            -webkit-overflow-scrolling: touch !important;
        }
    </style>
    @RenderSection("Styles", false)

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body class="hold-transition skin-purple sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a href="/" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b> @Const.WebSiteName </b>@Const.WebSiteName</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>پنل</b>مدیریت </span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top">
                <!-- Sidebar toggle button-->
                <a href="~/Adminpanel/#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <i class="fa fa-list"></i>
                </a>
                <!-- Navbar Right Menu -->
                @await Component.InvokeAsync("Header")
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                @if (User.Identity.IsAuthenticated)
                {


                    <!-- Sidebar user panel -->
                    <div class="user-panel">
                        <div class="pull-right image">
                        </div>

                        <div class="pull-right info">

                            <p>  @User.Identity.Name    </p>


                        </div>
                    </div>

                    <ul class="sidebar-menu direction">
                        <li class="header">منو اصلی</li>
                        <li class="treeview">
                            <a href="~/Adminpanel/#">
                                <i class="fas fa-users"></i> <span>  تنظیمات اصلی</span> <i class="fa fa-angle-left pull-right"></i>
                            </a>
                            <ul class="treeview-menu">
                                <li><a asp-controller="Home" asp-action="index"><i class="fas fa-user"></i>  درخواست ها   </a></li>
                                <li><a asp-controller="Drivers" asp-action="index"><i class="fas fa-user"></i>  راننده ها   </a></li>
                                <li><a asp-controller="TaxiServices" asp-action="index"><i class="fas fa-user"></i>  سرویس ها    </a></li>
                               
                            </ul>
                            <ul class="treeview-menu">
                                <li><a asp-action="logout" asp-controller="auth"> <i class="fas fa-signout"></i>خروج</a>    </li>
                            </ul>
                        </li>

                    </ul>
                }
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->

        <div class="content-wrapper">

            <!-- Content Header (Page header) -->
            <!-- Main content -->
            <section class="content">

                @RenderBody()
            </section>
            <!-- /.content -->
        </div>

        <!-- /.content-wrapper -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>  &copy;  @DateTime.Now.Year  <a href="#"> توسعه مدیریت ارتباط ماندگار  </a> </b>
            </div>
            <strong>  تمامی حقوق محفوظ است  </strong>

        </footer>
        <!-- Control Sidebar -->
        <!-- /.control-sidebar -->
        <!-- Add the sidebar's background. This div must be placed
        immediately after the control sidebar -->
        <div class="control-sidebar-bg"></div>
        <!-- Modal structure -->
        <div id="messagedialog"
             data-iziModal-title="پیام سیستم" data-iziModal-icon="icon-home">
            <!-- Modal content -->

        </div>
        <div id="modalloader"
             data-iziModal-title="پیام سیستم" data-iziModal-icon="icon-home">
            <!-- Modal content -->

        </div>
    </div>

    <!-- jQuery 2.2.0 -->
    <script src="~/plugins/jQuery/jQuery-2.2.0.min.js"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="~/plugins/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- FastClick -->
    <script src="~/plugins/fastclick/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="~/dist/js/app.min.js"></script>
    <!-- Sparkline -->
    <script src="~/plugins/sparkline/jquery.sparkline.min.js"></script>
    <!-- jvectormap -->
    <script src="~/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js"></script>
    <script src="~/plugins/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
    <!-- SlimScroll 1.3.0 -->
    <script src="~/plugins/slimScroll/jquery.slimscroll.min.js"></script>
    <!-- ChartJS 1.0.1 -->
    <script src="~/plugins/chartjs/Chart.min.js"></script>

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <audio controls="controls" id="soundnotify" style="display:none">
        <source src="~/Statics/Sound/Successalert.wav" />
    </audio>


    <script src="~/plugins/jquery-validation-unobtrusive/jquery.unobtrusive-ajax.js"></script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script>
        $(".select2").select2({
            dir: "rtl",
            language: "fa",
            theme: "classic",
            width: "100%",
            placeholder: 'بدون انتخاب',
            allowClear: true

        });
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/izimodal/1.5.1/js/iziModal.min.js"></script>
    <script>
        var modal = $('#messagedialog').iziModal();
        var modalloader = $('#modalloader').iziModal({
            closeOnEscape: false,
            closeButton: false,
            overlayClose: false,
            headerColor: '#141b1e',
            width: 200,
        });
        function EasyMessage(message)
        {

            modal.iziModal('setContent', '<p class="text-center alertContent">' + message + '</p>');
            modal.iziModal('open', {
                transition: 'bounceInDown' // Here transitionIn is the same property.
            });
        }


        function EasyInvalidMessage(event,message) {
            EasyMessage(message);
            event.stopPropagation();
            return false;
        }

        function EasyLoadingStart() {
            modalloader.iziModal('setContent', '<p class="text-center alertContent">'+''+'</p>');

            modalloader.iziModal('setHeader', false);
            modalloader.iziModal('setTitle', 'لطفا منتظر بمانید');
            modalloader.iziModal('open', {
                transition: 'bounceInDown' // Here transitionIn is the same property.
            });
            modalloader.iziModal('startLoading');
        }
        function EasyLoadingEnd() {
            modalloader.iziModal('stopLoading');
            modalloader.iziModal('close');
        }



    </script>

    <style>
        .alertContent {
            padding-top: 21px;
            padding-bottom: 8px;
            font-family: 'Shabnam';
        }

        .iziModal .iziModal-header-title {
            font-family: 'Shabnam';
            text-align: center;
        }
    </style>
    @**Set Active path**@
    <script>
      var route=window.location.pathname;
        var current= $("[href='"+route+"']")
      current.css("color","white");
       current.parent().parent().parent().addClass('active');
    </script>
    @RenderSection("Scripts", false)
</body>
</html>

