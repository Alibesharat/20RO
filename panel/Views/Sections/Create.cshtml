@model DAL.Section

@{
ViewData["ClassName"]=@Html.DisplayNameFor(c=>c.ClassName);
    ViewData["Title"] = $"افزودن {ViewData["ClassName"]} جدید";
}


 <div class="box box-primary">
    <div class="box-header">
<h3 class="box-header text-center">
    <span class="btn btn-warning"> @ViewData["Title"]
    </span>
    </h3>
    <hr />
   </div>
    <div class="box-body">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CoursId" value="@ViewBag.CoursId" />
            <div class="form-group">
                <label asp-for="weekday" class="control-label"></label>
                <select asp-for="weekday" class="form-control Select2" asp-items="Html.GetEnumSelectList<Weekday>()"></select>
                <span asp-validation-for="weekday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartHour" class="control-label"></label>
                <input asp-for="StartHour" class="form-control" />
                <span asp-validation-for="StartHour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartMiniute" class="control-label"></label>
                <input asp-for="StartMiniute" class="form-control" />
                <span asp-validation-for="StartMiniute" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndHour" class="control-label"></label>
                <input asp-for="EndHour" class="form-control" />
                <span asp-validation-for="EndHour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndMiniute" class="control-label"></label>
                <input asp-for="EndMiniute" class="form-control" />
                <span asp-validation-for="EndMiniute" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="ثبت" class="btn btn-success  btn-block" />
            </div>
        </form>
    </div>
</div>
</div>
    </div>
 <div>
     <a class="btn btn-danger" asp-action="Index" asp-route-CourseId="@ViewBag.CoursId">بازگشت به لیست</a>

 </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
