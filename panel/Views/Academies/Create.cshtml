@model DAL.Academy

@{
ViewData["ClassName"]=@Html.DisplayNameFor(c=>c.ClassName);
    ViewData["Title"] = $"افزودن {ViewData["ClassName"]} جدید";
}


 <div class="box box-primary">
    <div class="box-header">
<h3 class="box-header text-center">
    <span class="btn btn-warning"> @ViewData["Title"]
    </span>
    </h3>
    <hr />
   </div>
    <div class="box-body">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContractorId" class="control-label"></label>
                <select asp-for="ContractorId" class="form-control Select2" asp-items="ViewBag.ContractorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DistrictId" class="control-label"></label>
                <select asp-for="DistrictId" class="form-control Select2" asp-items="ViewBag.ContractorId"></select>
            </div>
          
            <div class="form-group">
                <label asp-for="AcademyCategoryId" class="control-label"></label>
                <select asp-for="AcademyCategoryId" class="form-control Select2" asp-items="ViewBag.AcademyCategoryId"></select>
            </div>
           
            <div class="form-group">
                <label asp-for="SupportNumber" class="control-label"></label>
                <input asp-for="SupportNumber" class="form-control" />
                <span asp-validation-for="SupportNumber" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNubmber" class="control-label"></label>
                <input asp-for="PhoneNubmber" class="form-control" />
                <span asp-validation-for="PhoneNubmber" class="text-danger"></span>
            </div>

           


            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="AllowActivity" /> @Html.DisplayNameFor(model => model.AllowActivity)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="ثبت" class="btn btn-success  btn-block" />
            </div>
        </form>
    </div>
</div>
</div>
    </div>
<div>
    <a class="btn btn-danger" asp-action="Index"> بازگشت به لیست </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
