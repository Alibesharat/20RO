@model DAL.Driver

@{
ViewData["ClassName"]=@Html.DisplayNameFor(c=>c.ClassName);
    ViewData["Title"] = $"افزودن {ViewData["ClassName"]} جدید";
}


 <div class="box box-primary">
    <div class="box-header">
<h3 class="box-header text-center">
    <span class="btn btn-warning"> @ViewData["Title"]
    </span>
    </h3>
    <hr />
   </div>
    <div class="box-body">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AvatarPath" class="control-label"></label>
                <input type="file" asp-for="AvatarPath" class="form-control" />
                <span asp-validation-for="AvatarPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarName" class="control-label"></label>
                <input asp-for="CarName" class="form-control" />
                <span asp-validation-for="CarName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarType" class="control-label"></label>
                <input asp-for="CarType" class="form-control" />
                <span asp-validation-for="CarType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarColor" class="control-label"></label>
                <input asp-for="CarColor" class="form-control" />
                <span asp-validation-for="CarColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IranianIdCode" class="control-label"></label>
                <input asp-for="IranianIdCode" class="form-control" />
                <span asp-validation-for="IranianIdCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrivingLicense" class="control-label"></label>
                <input asp-for="DrivingLicense" class="form-control" />
                <span asp-validation-for="DrivingLicense" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DriverCode" class="control-label"></label>
                <input asp-for="DriverCode" class="form-control" />
                <span asp-validation-for="DriverCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PelakNumber" class="control-label"></label>
                <input asp-for="PelakNumber" class="form-control" />
                <span asp-validation-for="PelakNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityId" class="control-label"></label>
                <select asp-for="CityId" class="form-control" asp-items="ViewBag.CityId"></select>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsMaried" /> @Html.DisplayNameFor(model => model.IsMaried)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="HasPlan" /> @Html.DisplayNameFor(model => model.HasPlan)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="Gender" class="form-control">
                    <option value="True">مرد</option>
                    <option value="False">زن</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNubmber" class="control-label"></label>
                <input asp-for="PhoneNubmber" class="form-control" />
                <span asp-validation-for="PhoneNubmber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsMobielVerifed" /> @Html.DisplayNameFor(model => model.IsMobielVerifed)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsEmailVerified" /> @Html.DisplayNameFor(model => model.IsEmailVerified)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="BirthDay" class="control-label"></label>
                <input asp-for="BirthDay" class="form-control" />
                <span asp-validation-for="BirthDay" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="ثبت" class="btn btn-success  btn-block" />
            </div>
        </form>
    </div>
</div>
</div>
    </div>
<div>
    <a class="btn btn-danger" asp-action="Index"> بازگشت به لیست </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
