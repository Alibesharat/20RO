@model DAL.Pricing

@{
ViewData["ClassName"]=@Html.DisplayNameFor(c=>c.ClassName);
    ViewData["Title"] = $"افزودن {ViewData["ClassName"]} جدید";
}


 <div class="box box-primary">
    <div class="box-header">
<h3 class="box-header text-center">
    <span class="btn btn-warning"> @ViewData["Title"]
    </span>
    </h3>
    <hr />
   </div>
    <div class="box-body">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AcademyId" class="control-label"></label>
                <select asp-for="AcademyId" class ="form-control" asp-items="ViewBag.AcademyId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FormKilometer" class="control-label"></label>
                <input asp-for="FormKilometer" class="form-control" />
                <span asp-validation-for="FormKilometer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToKilometer" class="control-label"></label>
                <input asp-for="ToKilometer" class="form-control" />
                <span asp-validation-for="ToKilometer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConstPrice" class="control-label"></label>
                <input asp-for="ConstPrice" class="form-control" />
                <span asp-validation-for="ConstPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricePerKilometer" class="control-label"></label>
                <input asp-for="PricePerKilometer" class="form-control" />
                <span asp-validation-for="PricePerKilometer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comission" class="control-label"></label>
                <input asp-for="Comission" class="form-control" />
                <span asp-validation-for="Comission" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ثبت" class="btn btn-success  btn-block" />
            </div>
        </form>
    </div>
</div>
</div>
    </div>
<div>
    <a class="btn btn-danger" asp-action="Index"> بازگشت به لیست </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
