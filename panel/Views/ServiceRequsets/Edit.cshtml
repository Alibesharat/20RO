@model DAL.ServiceRequset

@{
    ViewData["ClassName"]=@Html.DisplayNameFor(c=>c.ClassName);
    ViewData["Title"] = $"ویرایش {ViewData["ClassName"]} ";
}


<div class="box box-primary">
    <div class="box-header">
<h3 class="box-header text-center">
    <span class="btn btn-warning"> @ViewData["Title"]
    </span>
    </h3>
    <hr />
   </div>
    <div class="box-body">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="StudentParrentId" class="control-label"></label>
                <select asp-for="StudentParrentId" class="form-control" asp-items="ViewBag.StudentParrentId"></select>
                <span asp-validation-for="StudentParrentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
       
            <div class="form-group">
                <label asp-for="RequsetState" class="control-label"></label>
                <select asp-for="RequsetState" asp-items="Html.GetEnumSelectList<RequsetSate>()" class="form-control Select2"></select>
                <span asp-validation-for="RequsetState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-warning btn-block" />
            </div>
        </form>
    </div>
</div>
    </div>
    </div>
<div>
    <a class="btn btn-danger" asp-action="Index">بازگشت به لیست</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
