
@{
    ViewData["Title"] = "بازیابی رمز عبور";
}

<div class="fix-navbar-header">
    <br />

</div>
<div class="row">
    <div class="col s12 m4 offset-m4">
        <div class="card white lighten-1">



            <div class="card-content white-text">
                <form asp-action="ForgotPassword" asp-controller="Home"  method="post">
                    <div class="form-group">
                        <div class=" col s12 ">
                            <input class="entry" id="number" name="PhoneNubmber"  type="text" placeholder="تلفن همراه">
                        </div>
                    </div>
                

                    <p class="center">
                        <button class="waves-effect btn corner" type="submit">
                            بازیابی رمز عبور
                        </button>
                    </p>


                </form>
            </div>

            <div class="card-action">
                <p class="red-text center">@ViewBag.msg</p>
                <p>
                    <a asp-action="Login" asp-controller="Account" class="blue-text">  بازگشت به صفحه ورود  </a>
                </p>

            </div>

        </div>



    </div>
</div>

